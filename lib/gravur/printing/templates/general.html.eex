<html>
  <body>
    <p>
      <ul style="list-style-type:none;">
        <%= for greeting <- greetings do %>
          <li>
            <img width="500" src="<%= Gravur.Printing.get_image_url(greeting) %>" />
            <div><%= greeting.text %></div>
            <div><%= greeting.signature %></div>
          </li>
        <% end %>
      </ul>
    </p>
  </body>
</html>