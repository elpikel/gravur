<html>
  <head>
    <meta charset="UTF-8">
  </head>
  <body>
    <%= for greeting <- greetings do %>
      <div style="display:flex;align-items:center;width:216mm;height:216mm;page-break-before:always;">
        <table style="width: 100%;height: 100%;text-align: center;vertical-align: middle;">
          <tr>
            <td>
              <img style="display: block;margin: 0 auto;width:216mm" src="<%= Gravur.Printing.get_image_url(greeting) %>" /> 
            </td>
          </tr>
        </table>
      </div>
      <div style="width:216mm;height:216mm;page-break-before: always;">
        <table style="width: 100%;height: 100%;text-align: center;vertical-align: middle;">
          <tr>
            <td>
              <div style="display: block;margin: 0 auto;width:216mm">
                <div style="font-size:11mm;margin: 0 10mm"><%= greeting.text %></div>
                <div style="font-size:10mm;margin:20mm;text-align:right"><%= greeting.signature %></div>
              </div>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
  </body>
</html>
